extends layout

block content
	link(rel='stylesheet', href='/stylesheets/category.css')
	include header

	div.category-menu
		div.container
			div.ui.large.secondary.pointing.menu
				a.item 主页
					each tag in tags
						a.item(href='/category?tag_id='+'#{tag._id}') #{tag.name}

	div.search-result
		div.container
			ul
				each music in newest_music
					li
						div.item
							div.ui.card.small-item
								div.blurring.dimmable.image.small-item
									img(src='')
									div.ui.dimmer
										div.content
											i.large.play.icon
							div.l-r
								a.title(href='#') #{music.name}
								div.v-desc #{music.introduction}
								div.v-info
									span.bf
										i.toggle.right.icon
										span #{music.listenN}
									span.pl
										i.comment.outline.icon
										span #{music.commentN}
								a.author(href='') #{music.author.username}
		div.page-selector
			div.button-groups
			div.page-jump
				p 第
				div.ui.input
					input(type="text" value="1" style="padding: .6em .8em .6em .8em;")
				p.total /1
				p 页


	include footer

	script(src="/javascripts/category.js")