extends ../layout

block content

  include ../header.jade

  link(href="stylesheets/sign.css", rel="stylesheet")

  div#sign-form-container(class="ui two column middle aligned very relaxed stackable grid")
    div(class="column")
      form(class="ui form login-form" action="/login" method="POST")
        div(class="field")
          label Username
          div(class="ui left icon input")
            input(type="text" name="username" placeholder="Username")
            i(class="user icon")
        div(class="field")
          label Password
          div(class="ui left icon input")
            input(type="password" name="password" placeholder="Password")
            i(class="lock icon")
        div(class="ui blue submit button") Login
    div.form-divider(class="ui vertical divider") Or
    div(class="center aligned column")
      a(class="ui big green labeled icon button" href="/signup")
        i(class="signup icon")
        |Sign Up

  if error
    div#error-message-block(class="ui error message")
      ul.list
        li #{error}

  include ../footer.jade

  script(src="/javascripts/form.js" defer)
